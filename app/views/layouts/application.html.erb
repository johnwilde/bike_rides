<!DOCTYPE html>
<html>
  <head>
    <%= render 'layouts/stylesheets' %>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application", "http://maps.googleapis.com/maps/api/js?sensor=false"%>
    <%= csrf_meta_tags %>
    <title>MyTracks Browser</title>
  </head>
  <body>
    <div id="user_nav">
      <% if current_user %>
        Welcome <%= link_to current_user.name, user_path(current_user) %>!
        <%= link_to "Sign Out", signout_path %>
      <% else %>
        <%= link_to "Sign in with Google", "/auth/google_hybrid" %>
      <% end %>
      <%= yield :head %>
    </div>
    <div class="container">
      <% flash.each do |key, value| %>
        <div class="flash <%= key %>"><%= value %></div>
      <% end %>
      <%= yield %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
